{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "baseUrl": "./",
        // Specify type package names to be included without being referenced in a source file.
        "types": [
            "svelte"
        ],
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/main.ts",
        "src/scripts/**.ts",
        "src/**/*.svelte"
    ],
    "exclude": [
        "node_modules/**",
        "extension/**",
        "docs/**",
    ]
}